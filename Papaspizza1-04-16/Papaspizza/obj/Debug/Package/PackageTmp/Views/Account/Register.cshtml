@model Papaspizza.Models.Property
@using Papaspizza.HtmlHelpers;
@{
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">

<head>
    <title>Register</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="cache-control" content="no-cache">

    <link rel="shortcut icon" href="/images/favicon.ico" />
    <link rel="apple-touch-icon" href="/images/favicon.ico" />
    <link rel="apple-touch-icon" sizes="72x72" href="/images/favicon.ico" />
    <link rel="apple-touch-icon" sizes="114x114" href="/images/favicon.ico" />

    <link type="text/css" href="http://fonts.googleapis.com/css?family=Open+Sans:400italic,700italic,800italic,400,700,800" />
    <link type="text/css" rel="stylesheet" href="http://fonts.googleapis.com/css?family=Oswald:400,700,300" />
    <link type="text/css" rel="stylesheet" href="/admin_assets/vendors/jquery-ui-1.10.3.custom/css/ui-lightness/jquery-ui-1.10.3.custom.html">
    <link type="text/css" rel="stylesheet" href="/admin_assets/vendors/font-awesome/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="/admin_assets/vendors/bootstrap/css/bootstrap.min.css"><!--Loading style vendors-->
    <link type="text/css" rel="stylesheet" href="/admin_assets/vendors/animate.css/animate.css">
    <link type="text/css" rel="stylesheet" href="/admin_assets/vendors/iCheck/skins/all.css"><!--Loading style-->
    <link type="text/css" rel="stylesheet" href="/admin_assets/css/themes/style1/pink-blue.css" class="default-style">
    <link type="text/css" rel="stylesheet" href="/admin_assets/css/themes/style1/pink-blue.css" id="theme-change" class="style-change color-change">
    <link type="text/css" rel="stylesheet" href="/admin_assets/css/style-responsive.css">
    <link type="text/css" rel="stylesheet" href="/admin_assets/vendors/select2/select2-madmin.css">
    <link type="text/css" rel="stylesheet" href="/admin_assets/vendors/bootstrap-select/bootstrap-select.min.css">
</head>
<body id="signup-page">
    @if (TempData["MSG"] != null)
    {
        <div class="alert alert-info alert-dismissable" style="text-align:center;">
            <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
            <strong>@TempData["MSG"]</strong>
        </div>
    }
    <div class="page-form">
@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form", @id = "signup-form" }))
         {
       
            <div class="header-content">
                <h1>Register
                                            <br />
                                            <a href="@Url.Action("Index","Home")"><img src="~/images/logo.png" /></a>
                </h1>
        </div>
        <div class="body-content">
            <div id="MSG" style="color:red;"></div>
                <div class="form-group">
                    <div class="input-icon right">
                        <i class="fa fa-envelope"></i>
                        @Html.TextBoxFor(model => model.EmailID, new { @class = "form-control", @type = "email", @placeholder = "Email Address", @required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-icon right">
                        <i class="fa fa-key"></i>
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control", @placeholder = "Password", @required = "required" })
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-icon right">
                        <i class="fa fa-key"></i>
                        @Html.PasswordFor(model => model.CnfPassword, new { @class = "form-control", @placeholder = "Confirm Password", @required = "required", @onkeyup = "checkPass(); return false;" })
                    </div>
                </div><hr>
                <div style="margin-bottom: 15px" class="row">
                    <div class="col-lg-6">
                        <label>
                            @Html.TextBoxFor(model => model.FirstName, new { @class = "form-control", @placeholder = "First Name", @required = "required" })
                        </label>
                    </div><div class="col-lg-6">
                        <label>
                            @Html.TextBoxFor(model => model.LastName, new { @class = "form-control", @placeholder = "Last Name", @required = "required" })
                        </label>
                    </div>
                </div>
                <div class="form-group">
                   @Html.TextBoxFor(model => model.ContactNo, new { @class = "form-control", @placeholder = "Contact No", @required = "required" })
                </div>
               
                <div class="form-group mbn">
                    <a href="/Account" class="btn btn-warning">
                        <i class="fa fa-chevron-circle-left"></i>&nbsp;
                        Login
                    </a><button type="submit" class="btn btn-info pull-right" id="NewReg">
                            Submit
                            &nbsp;<i class="fa fa-chevron-circle-right"></i>
                        </button>
                </div>
            </div>
}
    </div>
    <script src="/admin_assets/js/jquery-1.10.2.min.js"></script>
    <script src="/admin_assets/js/jquery-migrate-1.2.1.min.js"></script>
    <script src="/admin_assets/js/jquery-ui.js"></script>
    <script src="/admin_assets/vendors/bootstrap/js/bootstrap.min.js"></script>
    <script src="/admin_assets/vendors/bootstrap-hover-dropdown/bootstrap-hover-dropdown.js"></script>
    <script src="/admin_assets/vendors/jquery-validate/jquery.validate.min.js"></script>
    <script src="/admin_assets/js/html5shiv.js"></script>
    <script src="/admin_assets/js/respond.min.js"></script>
    <script src="/admin_assets/js/extra-signup.js"></script>
    <script src="/admin_assets/vendors/iCheck/icheck.min.js"></script>
    <script src="/admin_assets/vendors/iCheck/custom.min.js"></script>
    <script src="/admin_assets/vendors/select2/select2.min.js"></script>
    <script src="/admin_assets/vendors/bootstrap-select/bootstrap-select.min.js"></script>
    <script src="/admin_assets/vendors/multi-select/js/jquery.multi-select.js"></script>
    <script src="/admin_assets/js/ui-dropdown-select.js"></script>
  
    <script type="text/javascript">
        function checkPass() {

            var pass1 = document.getElementById('Password');
            var pass2 = document.getElementById('CnfPassword');
            var btn = document.getElementById('NewReg');

            var message = document.getElementById('MSG');

            var goodColor = "#66cc66";
            var badColor = "#ff6666";

            if (pass1.value == pass2.value) {
                pass2.style.backgroundColor = "#fff";
                message.style.color = goodColor;
                btn.disabled = false;
                message.innerHTML = "Password Match!"

            } else {
                pass2.style.backgroundColor = badColor;
                message.style.color = badColor;
                btn.disabled = true;
                message.innerHTML = "Password Do Not Match!"
            }
        }
    </script>
</body>

</html>