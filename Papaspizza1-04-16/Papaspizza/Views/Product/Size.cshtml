@model Papaspizza.Models.Property
@{
    ViewBag.Title = "Size";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    TempData["Content1"] = "class=" + "active selected";
    TempData["SubCategory"] = "visible";
    var info = Model;

}

@if (TempData["MSG"] != null)
{
    <div class="alert alert-info alert-dismissable">
        <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
        <strong>@TempData["MSG"]</strong>
    </div>
}

<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-blue">
                <div class="panel-heading">
                    Size Setting
                </div>
                <div class="panel-body pan">

                    <ul id="myTab4" class="nav nav-tabs nav-justified">
                        <li class="@TempData["brandAdd11"] tabbg">
                            <a class="panel-violet" href="#tab1" data-toggle="tab">Add</a>
                        </li>
                        <li class="@TempData["brandlist1"] tabbg">
                            <a href="#tab2" data-toggle="tab">List</a>
                        </li>

                    </ul>
                    <div id="myTabContent4" class="tab-content">

                        <div id="tab1" class="tab-pane fade @TempData["brandAdd1"]">

                            @using (Html.BeginForm("Size", "Product", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                            {
                                <div class="form-body pal">
                                    <div class="form-group">

                                     
                                        <div class="col-md-6">
                                            <label class="control-label">Size </label>
                                            @Html.HiddenFor(model => model.id)
                                            @Html.TextBoxFor(model => model.Size, new { @placeholder = "Title", @required = "required", @class = "form-control" })
                                        </div>
                                        <div class="col-md-6">
                                            <label class="control-label">Status</label>
                                            @Html.DropDownListFor(model => model.Status,
                                        new List<SelectListItem>
                                        {
                                            new SelectListItem { Text="ACTIVE", Value="ACTIVE"},
                                            new SelectListItem { Text="INACTIVE", Value="INACTIVE"}
                                        }
                                        , new { @class = "form-control" }
                                        )
                                        </div>
                                    </div>

                                        <div class="form-group">


                                        <div class="col-md-6">
                                            <input type="submit" class="btn btn-success" value="SUBMIT" />
                                        </div>
                                    </div>

                                </div>
                            }

                        </div>

                        <div id="tab2" class="tab-pane fade @TempData["brandlist1"]">

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="portlet box panel panel-orange">
                                        <div class="panel-heading">
                                            Size List
                                        </div>
                                        <div class="portlet-body">
                                            <div class="row mbm">
                                                <div class="col-lg-12">
                                                    <div class="table-responsive">
                                                        <table id="table_id" class="table table-hover table-striped table-bordered tablesorter">
                                                            <thead>
                                                                <tr>

                                                                    <th>ID</th>                                                                    
                                                                    <th>Size</th>
                                                                    <th>Status</th>
                                                                    <th>Actions</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (Papaspizza.Models.Property i in ViewBag.SizeList)
                                                                {
                                                                    <tr>

                                                                        <td>@i.id</td>
                                                                        <td>@i.Size</td>
                                                                        <td>@i.Status</td>
                                                                        <td>
                                                                            <a href="/Product/Size/@i.id" class="btn btn-warning btn-xs">
                                                                                <i class="fa fa-edit"></i>&nbsp;
                                                                                Edit
                                                                            </a>
                                                                            <br /><br />
                                                                            <a href="/Product/Delete?id=@i.id&type=Size" class="btn btn-primary btn-xs">Delete</a>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>

                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>


</div>

@section scripts{
    <script src="/admin_assets/vendors/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="/admin_assets/vendors/DataTables/media/js/dataTables.bootstrap.js"></script>
    <script src="/admin_assets/vendors/DataTables/extensions/TableTools/js/dataTables.tableTools.min.js"></script>
    <script src="/admin_assets/js/table-datatables.js"></script>

}