@{
    ViewBag.Title = "Product Detail List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    TempData["Product1"] = "class=" + "active selected";
    TempData["AddProductList1"] = "visible";

}

@if (TempData["MSG"] != null)
{
    <div class="alert alert-info alert-dismissable">
        <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
        <strong>@TempData["MSG"]</strong>
    </div>
}

<div class="page-content">

    <div class="row">
        <div class="col-lg-12">
            <div class="portlet box panel panel-yellow">
                <div class="panel-heading">
                    Product List
                </div>
                <div class="portlet-body">
                    <div class="row mbm">
                        <div class="col-lg-12">
                            <div class="table-responsive">
                                <table id="table_id" class="table table-hover table-striped table-bordered tablesorter">
                                    <thead>

                                        <tr>

                                            <th width="9%">
                                                ID
                                            </th>
                                            <th>
                                                Product
                                            </th>
                                            <th>
                                      Category
                                            </th>
                                            <th>
                                                Image
                                            </th>

                                            <th>
                                                Status
                                            </th>
                                            <th>
                                               Action
                                            </th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (Papaspizza.Models.Property i in ViewBag.DetailList)
                                        {
                                            <tr>
                                                <td>
                                                    <a href="/Product/Add/@i.id" class="btn btn-warning btn-xs">
                                                        <i class="fa fa-edit"></i>&nbsp;
                                                        Edit
                                                    </a>
                                                </td>
                                                <td>@i.Title</td>
                                              <td>@i.Category</td>
                                                <td><img src="@i.ImgURL" style="max-height:60px;" /></td>
                                                <td>@i.Status</td>
                                                <td><a href="/Product/Delete?id=@i.id&type=Product" class="btn btn-primary btn-xs">Delete</a></td>
                                            </tr>
                                        }
                                    </tbody>

                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
@section scripts{
    <script src="/admin_assets/vendors/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="/admin_assets/vendors/DataTables/media/js/dataTables.bootstrap.js"></script>
    <script src="/admin_assets/vendors/DataTables/extensions/TableTools/js/dataTables.tableTools.min.js"></script>
    <script src="/admin_assets/js/table-datatables.js"></script>

}
