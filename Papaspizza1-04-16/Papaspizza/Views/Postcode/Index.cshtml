@model Papaspizza.Models.Property

@{
    ViewBag.Title = "Postcode Master";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    TempData["Postcode1"] = "class=" + "active";
    TempData["Postcode11"] = "class=" + "active";
    TempData["PageTitle"] = "Postcode Master";
    var info = Model;
}


@if (TempData["MSG"] != null)
{
    <div class="alert alert-info alert-dismissable">
        <button type="button" data-dismiss="alert" aria-hidden="true" class="close">×</button>
        <strong>@TempData["MSG"]</strong>
    </div>
}

<div class="page-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-blue">
                <div class="panel-heading">
                    Postcode Setting
                </div>
                <div class="panel-body pan">

                    <ul id="myTab4" class="nav nav-tabs nav-justified">
                        <li class="@TempData["brandAdd11"] tabbg">
                            <a class="panel-violet" href="#tab1" data-toggle="tab">Add</a>
                        </li>
                        <li class="@TempData["brandlist1"] tabbg">
                            <a href="#tab2" data-toggle="tab">List</a>
                        </li>

                    </ul>
                    <div id="myTabContent4" class="tab-content">

                        <div id="tab1" class="tab-pane fade @TempData["brandAdd1"]">

                            @using (Html.BeginForm("index", "Postcode", FormMethod.Post, new { @class = "form-horizontal", @enctype = "multipart/form-data" }))
                            {
                                <div class="form-body pal">
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Content <span class="require">*</span></label>
                                        <div class="col-md-6">
                                            @Html.HiddenFor(model => model.id)
                                            @Html.TextAreaFor(model => model.Page, new { @placeholder = "Postcode", @required = "required", @class = "form-control" })
                                        </div>

                                    </div>

                                    
                                    <div class="form-group">
                                        <label class="col-md-2 control-label">Status</label>
                                        <div class="col-md-6">
                                            @Html.DropDownListFor(model => model.Status,
                                        new List<SelectListItem>
                                        {
                                            new SelectListItem { Text="ACTIVE", Value="ACTIVE"},
                                            new SelectListItem { Text="DEACTIVE", Value="DEACTIVE"}
                                        }
                                        , new { @class = "form-control" }
                                        )
                                        </div>
                                        <div class="col-md-2">
                                            <input type="submit" class="btn btn-success" value="SUBMIT" />
                                        </div>
                                    </div>

                                </div>
                            }

                        </div>

                        <div id="tab2" class="tab-pane fade @TempData["brandlist1"]">

                            <div class="row">
                                <div class="col-lg-12">
                                    <div class="portlet box panel panel-grey">
                                        <div class="panel-heading">
                                   Postcode List
                                        </div>
                                        <div class="portlet-body">
                                            <div class="row mbm">
                                                <div class="col-lg-12">
                                                    <div class="table-responsive">
                                                        <table id="table_id" class="table table-hover table-striped table-bordered tablesorter">
                                                            <thead>
                                                                <tr>
                                                                  
                                                                    <th>ID</th>
                                                                    <th>Postcode</th>
                                                                   
                                                                    <th>Status</th>
                                                                    <th>Actions</th>
                                                                </tr>
                                                            </thead>
                                                            <tbody>
                                                                @foreach (Papaspizza.Models.Property i in ViewBag.Contentlist)
                                                                {
                                                                    <tr>

                                                                        <td>@i.id</td>
                                                                        <td>@i.Page</td>
                                                                       
                                                                        @if (i.Status == "ACTIVE")
                                                                        {
                                                                            <td><span class="label label-sm label-success">@i.Status</span></td>
                                                                        }
                                                                        else
                                                                        {
                                                                            <td><span class="label label-sm label-danger">@i.Status</span></td>
                                                                        }
                                                                        <td>
                                                                            <a href="/Postcode/index/@i.id" class="btn btn-warning btn-xs">
                                                                                <i class="fa fa-edit"></i>&nbsp;
                                                                                Edit
                                                                            </a>
                                                                            <br /><br />
                                                                            <a href="/Postcode/DeletePos/@i.id" class="btn btn-primary btn-xs">Delete</a>
                                                                        </td>
                                                                    </tr>
                                                                }
                                                            </tbody>

                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>


</div>

@section scripts{
    <script src="/admin_assets/vendors/DataTables/media/js/jquery.dataTables.js"></script>
    <script src="/admin_assets/vendors/DataTables/media/js/dataTables.bootstrap.js"></script>
    <script src="/admin_assets/vendors/DataTables/extensions/TableTools/js/dataTables.tableTools.min.js"></script>
    <script src="/admin_assets/js/table-datatables.js"></script>
    <script src="/admin_assets/vendors/bootstrap-colorpicker/js/bootstrap-colorpicker.js"></script>

    <script src="/admin_assets/vendors/bootstrap-switch/js/bootstrap-switch.min.js"></script>
    <script src="/admin_assets/vendors/jquery-maskedinput/jquery-maskedinput.js"></script>
    <script src="/admin_assets/vendors/charCount.js"></script>
    <script src="/admin_assets/js/form-components.js"></script>






}
